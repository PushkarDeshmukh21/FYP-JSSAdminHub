    <body class="bg-white">
        <header>
            <div class="header-container">
                    <h1>JSS Science and Technology University, Mysuru</h1>
            </div>
        </header>
        <main>
          <div class="heading">
            <h1>FDP Workshops</h1>
            <p>View and manage all FDP Workshops below.</p>
          </div>

          <div class="filter-container">
            <input type="text" id="searchInput" placeholder="Search by name or year..." onkeyup="filterSdp()">
            <label>
                <input type="checkbox" id="showAllCheckbox" unchecked onchange="toggleShowAll()"> Show All
            </label>
          </div>
          
          <div class="fdp-container">
            <% if (fdpWorkshops.length > 0) { %>
              <% fdpWorkshops.forEach(fdp => { %>
                <div class="fdp-card">
                  <h3>Event: <%= fdp.eventType %></h3>
                  <p><strong>Conducted By:</strong> <%= fdp.conductedBy %></p>
                  <p><strong>Institution:</strong> <%= fdp.institution %></p>
                  <p><strong>Start Date:</strong> <%= new Date(fdp.startDate).toDateString() %></p>
                  <p><strong>End Date:</strong> <%= new Date(fdp.endDate).toDateString() %></p>
                  <p><strong>Certificate:</strong>
                    <% if (fdp.certificate && fdp.certificate.data) { %>
                      <a href="/fdp/download/<%= fdp._id %>" target="_blank">Download</a>
                    <% } else { %>
                      No certificate available
                    <% } %>
                  </p>
                </div>
              <% }); %>
            <% } else { %>
              <p>No FDP workshops available yet.</p>
            <% } %>
          </div>
        
          <div class="add-new-section">
            <button id="showFormBtn">Add New FDP Workshop</button>
          </div>
        
          <form id="newFdpForm" action="/fdp/addFdp" method="POST" enctype="multipart/form-data" class="hide">
            <span class="close-btn" id="closeFormBtn">&times;</span>
        
            <label for="conductedBy">Conducted By:</label>
            <input type="text" name="conductedBy" id="conductedBy" required>
        
            <label for="eventType">Event Type:</label>
            <input type="text" name="eventType" id="eventType" required>
        
            <label for="institution">Institution:</label>
            <input type="text" name="institution" id="institution" required>
        
            <label for="startDate">Start Date:</label>
            <input type="date" name="startDate" id="startDate" required>
        
            <label for="endDate">End Date:</label>
            <input type="date" name="endDate" id="endDate" required>
        
            <label for="certificate">Upload Certificate:</label>
            <input type="file" name="certificate" id="certificate" required>
        
            <button type="submit">Submit FDP</button>
          </form>
        
          <script>
            const showFormBtn = document.getElementById('showFormBtn');
            const closeFormBtn = document.getElementById('closeFormBtn');
            const newFdpForm = document.getElementById('newFdpForm');
        
            // Show form with smooth animation
            showFormBtn.addEventListener('click', () => {
              newFdpForm.classList.remove('hide');
              newFdpForm.classList.add('show');
              newFdpForm.style.display = 'block';
              newFdpForm.scrollIntoView({ behavior: 'smooth' });
            });
        
            // Hide form with smooth animation
            closeFormBtn.addEventListener('click', () => {
              newFdpForm.classList.remove('show');
              newFdpForm.classList.add('hide');
              setTimeout(() => {
                newFdpForm.style.display = 'none';
              }, 300); // Match transition duration
              document.querySelector('.header').scrollIntoView({ behavior: 'smooth' });
            });
          </script>
        
        <script>
          document.getElementById('newFdpForm').addEventListener('submit', async function(event) {
              event.preventDefault(); // Prevent default form submission behavior
        
              const formData = new FormData(this); // Collect form data
        
              try {
                  const response = await fetch('/fdp/addFdp', {
                      method: 'POST',
                      body: formData
                  });
        
                  if (!response.ok) {
                      throw new Error('Failed to add FDP workshop');
                  }
        
                  // Wait for response
                  await response.json();
        
                  // Refresh the page to fetch updated data from MongoDB
                  window.location.reload(); 
        
              } catch (error) {
                  console.error('Error:', error);
              }
          });
        </script>
        
        <script>
          function filterFdp() {
              let searchInput = document.getElementById("searchInput").value.toLowerCase();
              let showAllChecked = document.getElementById("showAllCheckbox").checked;
              let fdpCards = document.querySelectorAll(".fdp-card");
        
              fdpCards.forEach(card => {
                  let name = card.getAttribute("data-name");
                  let startDate = card.getAttribute("data-start");
        
                  if (showAllChecked || name.includes(searchInput) || startDate.includes(searchInput)) {
                      card.style.display = "block";
                  } else {
                      card.style.display = "none";
                  }
              });
          }
        
          function toggleShowAll() {
              document.getElementById("searchInput").value = ""; // Clear search input when toggling Show All
              filterFdp();
          }
          </script>

      </main>

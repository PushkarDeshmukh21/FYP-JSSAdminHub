    <body class="bg-white">
        <header>
            <div class="header-container">
                    <h1>JSS Science and Technology University, Mysuru</h1>
            </div>
        </header>
        <main>
          <div class="heading">
            <h1>KDP Workshop</h1>
            <p>View and manage all KDP Workshops below.</p>
          </div>

          <div class="filter-container">
            <input type="text" id="searchInput" placeholder="Search by name or year..." onkeyup="filterSdp()">
            <label>
                <input type="checkbox" id="showAllCheckbox" unchecked onchange="toggleShowAll()"> Show All
            </label>
          </div>
          
          
          <div class="kdp-container">
            <% if (kdpWorkshops.length > 0) { %>
              <% kdpWorkshops.forEach(sdp => { %>
                <div class="kdp-card">
                  <h3>Event: <%= kdp.eventType %></h3>
                  <p><strong>Start Date:</strong> <%= new Date(kdp.startDate).toDateString() %></p>
                  <p><strong>End Date:</strong> <%= new Date(kdp.endDate).toDateString() %></p>
                  <p><strong>For Whom:</strong> <%= kdp.forWhom %></p>
                  <p><strong>Conducted/Attended:</strong> <%= kdp.conductedOrAttended %></p>
                  <p><strong>Report:</strong>
                    <% if (kdp.report && kdp.report.data) { %>
                      <a href="/kdp/download/<%= kdp._id %>" target="_blank">Download</a>
                    <% } else { %>
                      No report available
                    <% } %>
                  </p>
                </div>
              <% }); %>
            <% } else { %>
              <p>No KDP workshops available yet.</p>
            <% } %>
          </div>
        
          <div class="add-new-section">
            <button id="showFormBtn">Add New SDP Workshop</button>
          </div>
        
          <form id="newKdpForm" action="/kdp/addKdp" method="POST" enctype="multipart/form-data" class="hide">
            <span class="close-btn" id="closeFormBtn">&times;</span>
        
            <label for="eventType">Event Type:</label>
            <input type="text" name="eventType" id="eventType" required>
        
            <label for="startDate">Start Date:</label>
            <input type="date" name="startDate" id="startDate" required>
        
            <label for="endDate">End Date:</label>
            <input type="date" name="endDate" id="endDate" required>
        
            <label for="forWhom">For Whom:</label>
            <select name="forWhom" id="forWhom" required>
              <option value="Students">Students</option>
              <option value="Faculties">Faculties</option>
            </select>
        
            <label for="conductedOrAttended">Conducted/Attended:</label>
            <select name="conductedOrAttended" id="conductedOrAttended" required>
              <option value="Conducted">Conducted</option>
              <option value="Attended">Attended</option>
            </select>
        
            <label for="report">Upload Report:</label>
            <input type="file" name="report" id="report" required>
        
            <button type="submit">Submit KDP</button>
          </form>
        
          <script>
            const showFormBtn = document.getElementById('showFormBtn');
            const closeFormBtn = document.getElementById('closeFormBtn');
            const newKdpForm = document.getElementById('newKdpForm');
        
            showFormBtn.addEventListener('click', () => {
              newKdpForm.classList.remove('hide');
              newKdpForm.classList.add('show');
              newKdpForm.style.display = 'block';
              newKdpForm.scrollIntoView({ behavior: 'smooth' });
            });
        
            closeFormBtn.addEventListener('click', () => {
              newKdpForm.classList.remove('show');
              newKdpForm.classList.add('hide');
              setTimeout(() => {
                newKdpForm.style.display = 'none';
              }, 300);
            });
          </script>
        
        <script>
            document.getElementById('newKdpForm').addEventListener('submit', async function(event) {
                event.preventDefault(); // Prevent default form submission behavior
          
                const formData = new FormData(this); // Collect form data
          
                try {
                    const response = await fetch('/kdp/addKdp', {
                        method: 'POST',
                        body: formData
                    });
          
                    if (!response.ok) {
                        throw new Error('Failed to add KDP workshop');
                    }
          
                    // Wait for response
                    await response.json();
          
                    // Refresh the page to fetch updated data from MongoDB
                    window.location.reload(); 
          
                } catch (error) {
                    console.error('Error:', error);
                }
            });
          </script>
          <script>
            function filterKdp() {
                let searchInput = document.getElementById("searchInput").value.toLowerCase();
                let showAllChecked = document.getElementById("showAllCheckbox").checked;
                let kdpCards = document.querySelectorAll(".kdp-card");
          
                sdpCards.forEach(card => {
                    let name = card.getAttribute("data-name");
                    let year = card.getAttribute("data-year");
          
                    if (showAllChecked || name.includes(searchInput) || year.includes(searchInput)) {
                        card.style.display = "block";
                    } else {
                        card.style.display = "none";
                    }
                });
            }
          
            function toggleShowAll() {
                document.getElementById("searchInput").value = ""; // Clear search input when toggling Show All
                filterKdp();
            }
          </script>

